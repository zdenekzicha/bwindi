{block title} Benefity {/block}

{block content}
	<section id="page">
		<h1>Seznam benefitů</h1>
		<a n:href="Benefit:novyBenefit" class="btn btn-success btn-offset"><i class="glyphicon glyphicon-plus icon-offset"></i>Přidat benefit</a>
		<table class="table table-striped">
			<tr>
				<th>Id</th>
				<th>Název benefitu</th>
				<th>Cena</th>
				<th></th>
			</tr>
			{foreach $benefity as $benefit}
			<tr>
				<td>{$benefit->idBenefit}</td>
				<td>{$benefit->nazev}</td>
				<td>{$benefit->castka}</td>
				<td><a href="#" title="detail" class="btn btn-warning"><i class="icon-remove"></i></a></td>
			</tr>
			{/foreach}
		</table>
	</section>
{/block}
