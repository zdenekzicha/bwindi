{block title} Benefity {/block}

{block content}
	<section id="page">
		<h1>Seznam benefitů</h1>
		<table class="table table-striped">
			<tr>
				<th>Id</th>
				<th>Název benefitu</th>
				<th>Cena</th>
				<th></th>
			</tr>
			{foreach $benefity as $benefit}
			<tr>
				<td>{$benefit->idBenefit}</td>
				<td>{$benefit->nazev}</td>
				<td>{$benefit->castka}</td>
				<td><a href="#" title="detail"><i class="icon-remove"></i></a></td>
			</tr>
			{/foreach}
		</table>
		<button type="submit" class="btn btn-success">Přidat benefit</button>
	</section>
{/block}
