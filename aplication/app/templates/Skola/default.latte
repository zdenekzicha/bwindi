{block title} Školy {/block}

{block content}
	<section id="page">
		<h1>Školy</h1>
		<table class="table table-striped">
			<tr>
				<th>Název školy</th>
				<th>Částka na rok</th>
				<th></th>
			</tr>
			{foreach $skoly as $skola}
			<tr>
				<td>{$skola->nazev}</td>
				<td>{$skola->castka}</td>
				<td><a href="#" title="detail"><i class="icon-pencil"></i></a></td>
			</tr>
			{/foreach}
		</table>
		<a n:href="Skola:novaSkola">Vytvořit školu</a>
		
	</section>
{/block}
